{
  "name": "node-server-ts",
  "version": "0.0.1",
  "private": "true",
  "description": "Generic boilerplate for Node.js server with TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "prebuild": "rimraf dist",
    "dev": "nodemon",
    "debug": "node --inspect=9229 -r ts-node/register ./src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint './src/**/*.ts'",
    "prepublish": "npm run build"
  },
  "keywords": [
    "boilerplate",
    "node",
    "typescript"
  ],
  "author": "victorlcm",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.0.26",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
