{
  "name": "node-server-ts",
  "version": "0.0.1",
  "private": "true",
  "description": "Generic boilerplate for Node.js server with TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "prebuild": "rimraf dist",
    "dev": "nodemon",
    "debug": "node --inspect=9229 -r ts-node/register ./src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint './src/**/*.ts'",
    "test": "CI=true jest",
    "test:local": "jest --verbose",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "boilerplate",
    "node",
    "typescript"
  ],
  "author": "victorlcm",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.9",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.5.3",
    "nodemon": "^2.0.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
